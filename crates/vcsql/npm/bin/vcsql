#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

const isWindows = process.platform === 'win32';
const binName = isWindows ? 'vcsql.exe' : 'vcsql';
const binPath = path.join(__dirname, binName);

if (!fs.existsSync(binPath)) {
  console.error('vcsql binary not found. Try reinstalling the package:');
  console.error('  npm uninstall vcsql && npm install vcsql');
  process.exit(1);
}

const child = spawn(binPath, process.argv.slice(2), {
  stdio: 'inherit',
  shell: false
});

child.on('error', (error) => {
  console.error('Failed to start vcsql:', error.message);
  process.exit(1);
});

child.on('close', (code) => {
  process.exit(code || 0);
});
